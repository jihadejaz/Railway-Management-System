
@{
    ViewData["Title"] = "complaintFile";
}
@model Railway_Management_System.Models.RMScomplaints;


<div class="container-fluid p-0">
    <span class="text-white bg-danger p-1">@ViewBag.success</span>
    <span class="text-white bg-danger p-1">@ViewBag.error</span>

    <form asp-action="complaintFile" method="post">
        <div class="mb-3 mt-3">
            <label for="email">User Name:</label>
            <input type="name" class="form-control" style="border: 1px solid cyan; border-radius: 15px;" id="email" placeholder="user_name" asp-for="complaintName">
            <span class="text-danger" asp-validation-for="complaintName"></span>
        </div>
        <div class="mb-3">
            <div class="container p-0">
                <label for="email">Complaint Type:</label><br />

                <select asp-for="complaintType" id="complaintDropdown">
                    <option id="complaintDropdownList">--------Select--------</option>

                    <option id="complaintDropdownList" value="Booking cancelation">Booking cancelation</option>
                    <option id="complaintDropdownList" value="Ticket lost">Lost a ticket</option>
                </select>
                <span class="text-danger" asp-validation-for="complaintType"></span>

            </div>
        </div>
        <div class="mb-3 mt-3">
            <label for="email">Complaint Description:</label><br />
            <textarea asp-for="complaintDescription" style="border: 1px solid cyan; border-radius: 15px; padding: 5px;" asp-for="complaintDescription" placeholder="Complaint Description"></textarea><br />
            <span class="text-danger" asp-validation-for="complaintDescription"></span>
        </div>
        <button type="submit" id="authBtn" class="btn btn-primary">Submit</button>
    </form>
</div>
