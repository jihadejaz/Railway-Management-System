
@{
    ViewData["Title"] = "Signup";
}
@model Railway_Management_System.Models.RMSpassengers;

<div class="container-fluid">

    <span class="text-white bg-success">@ViewBag.success</span>

    <form asp-action="Signup" method="POST">
        <div class="mb-3 mt-3 mb-sm-5">
            <label for="email">User Name:</label>
            <input type="name" class="form-control" style="border: 1px solid cyan; border-radius: 15px;" id="email" placeholder="Enter User_name" asp-for="User_name">
            <span class="text-danger" asp-validation-for="User_name"></span>
        </div>
        <div class="mb-3">
            @* <label for="pwd">Password:</label> *@
            <input type="hidden" class="form-control" id="pwd" placeholder="Enter password" asp-for="Password">
            @* <span class="text-danger" asp-validation-for="Password"></span> *@
        </div>
        <div class="form-check mb-3">
            <label class="form-check-label">
                <input class="form-check-input" type="checkbox" asp-for="remember_Me"> Remember me
            </label>
        </div>
        <button type="submit" id="authBtn" name="saveData" class="btn btn-primary">Submit</button>
    </form>

</div>

