@{

    Layout = "_LayoutAdmin";
}

@model stationMaster;

<div class="main-content">
    <section class="section">
        <div class="section-body">
            <h2 class="section-title">Add a New Station</h2>
            <p class="section-lead"></p>

            <div class="row">
                <div class="col-12 col-md-12 col-lg-12">
                    <form asp-action="Add_station" method="post">
                       
                        <div class="card">
                            <div class="card-header">

                                <span class="text-success">@ViewBag.msg</span>

                            </div>
                            <div class="card-body">
                                <div class="form-group">
                                    <span class="text-success">@ViewBag.msg</span>
                                    <br />
                                    <label>Station Code</label>
                                    <br />
                                    <span class="text-danger" asp-validation-for="stationCode"></span>
                                    <input type="text" asp-for="stationCode" class="form-control">
                                </div>

                                <div class="form-group">
                                    <label>Station Name</label>
                                    <br />
                                    <span class="text-danger" asp-validation-for="stationName"></span>
                                    <div class="input-group">
                                        <div class="input-group-prepend">
                                            <div class="input-group-text">
                                                <i class="fas fa-lock"></i>
                                            </div>
                                        </div>
                                        <input type="text" asp-for="stationName"  class="form-control pwstrength" data-indicator="pwindicator">
                                    </div>

                                </div>
                                <div class="form-group">
                                    <label>Station Division</label>
                                    <br />
                                    <span class="text-danger" asp-validation-for="stationDivision"></span>
                                    <div class="input-group">
                                        <div class="input-group-prepend">
                                            <div class="input-group-text">
                                                <i class="fas fa-lock"></i>
                                            </div>
                                        </div>
                                        <input type="text" asp-for="stationDivision" class="form-control" data-indicator="pwindicator">
                                    </div>

                                </div>


                                <div class="form-group">

                                    <div class="input-group">

                                        <input type="submit" value="Add Station" class="btn btn-primary" data-indicator="pwindicator">
                                    </div>

                                </div>


                            </div>
                        </div>
                    </form>


                </div>

            </div>
        </div>
    </section>
</div>


